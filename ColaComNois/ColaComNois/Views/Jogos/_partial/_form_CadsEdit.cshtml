    <label class="col-sm-2 control-label">Jogo Mandante?</label>
    <div class="col-sm-10">
        <label class="radio-inline">
            <input type="radio" name="Mandante" id="optionsRadios1" value="option1" checked> Sim
        </label>
        <label class="radio-inline">
            <input type="radio" name="Mandante" id="optionsRadios2" value="option2"> Não
        </label>
        @Html.ValidationMessageFor(model => model.Mandante, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <label for="Observacao" class="col-sm-2 control-label">Observação</label>
    <div class="col-sm-10">
        <textarea id="Observacao" cols="30" rows="4" class="form-control"> 
         </textarea>
        @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
    </div>
</div>
