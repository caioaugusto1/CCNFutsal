@using ColaComNois.Filters

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cola Com Nois Futsal - Home Page</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Cola Com Nois - Futsal</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/bootstrap/css/sb-admin.css" rel="stylesheet">
    <link href="~/bootstrap/css/plugins/morris.css" rel="stylesheet">
    <link href="~/bootstrap/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">COLA COM NOIS FUTSAL</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                @if (SessionManager.UsuarioLogado != null)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Olá @SessionManager.UsuarioLogado.Nome @SessionManager.UsuarioLogado.SobreNome<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Logout", "Login")"><i class="fa fa-fw fa-power-off"></i> Sair</a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="active">
                        <a href="@Url.Action("Home", "Index")"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapseJogos" data-target="#demo"><i class="fa fa-fw fa-behance-square"></i>Jogos<i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapseJogos">
                            <li>@Html.ActionLink("Novo", "Create", "Jogos")</li>
                            <li>@Html.ActionLink("Listar", "Index", "Jogos")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapseAdversarios" data-target="#demo"><i class="fa fa-fw fa-calendar-o"></i>Adversários<i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapseAdversarios">
                            <li>@Html.ActionLink("Novo", "Create", "Adversarios")</li>
                            <li>@Html.ActionLink("Listar", "Index", "Adversarios")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapseRateios" data-target="#demo"><i class="fa fa-fw fa-desktop"></i>Rateio de despesas<i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapseRateios">
                            <li>@Html.ActionLink("Novo", "Create", "Rateios")</li>
                            <li>@Html.ActionLink("Listar", "Index", "Rateios")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapseDespesas" data-target="#demo"><i class="fa fa-fw fa-wrench"></i>Despesas<i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapseDespesas">
                            <li>@Html.ActionLink("Novo", "Create", "Despesas")</li>
                            <li>@Html.ActionLink("Listar", "Index", "Despesas")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" id="jogadores" data-toggle="collapseJogador" data-target="#demo"><i class="fa fa-fw fa-arrows-v"></i>Jogadores<i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapseJogador">
                            <li>@Html.ActionLink("Novo", "Create", "Jogadores")</li>
                            <li>@Html.ActionLink("Listar", "Index", "Jogadores")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/bootstrap/js/jquery.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/bootstrap/js/plugins/morris/raphael.min.js"></script>
    <script src="~/bootstrap/js/plugins/morris/morris.min.js"></script>
    <script src="~/bootstrap/js/plugins/morris/morris-data.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>
