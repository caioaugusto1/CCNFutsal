@model IEnumerable<ColaComNois.Entidades.Despesas>

@{
    ViewBag.Title = "Listar - Despesas";
}

<h3>Listar - Despesas</h3>

<p>
    @Html.ActionLink("Cadastrar Despesa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Pagamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Vencimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
